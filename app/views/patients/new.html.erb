<!DOCTYPE html>
<html>
<head>

</head>

<body>

 <header>
    <h1>Mis pacientes</h1>
  </header>
  <div class="interior">
    <a href="" class="logo"><img src="images/logo.png" alt=""></a>
    <nav class="navegation">
      <ul>
        <li><a href="/">Inicio</a></li>
        <li>
          <a href="Funciones">Funciones</a>
          <ul>
            <li><%= link_to 'Pacientes', patients_path %></li>
          </ul>
        </li>
        <li><a href="Contacto">Contacto</a></li>
        <li><a href="Base de datos">Base de datos</a></li>
        <li><a href="Log in">Log in</a></li>
        
      </ul>
    </nav>
  </div>

  <header>
    <h2>Crear nuevo paciente</h2>
  </header>

  <main>
    <%= form_with(model: @patient, local: true) do |form| %>
      <div class="field">
        <%= form.label :name, "Nombre:" %>
        <%= form.text_field :name %>
      </div>

      <div class="field">
        <%= form.label :lastname, "Apellido:" %>
        <%= form.text_field :lastname %>
      </div>

      <div class="field">
        <%= form.label :dni, "DNI:" %>
        <%= form.number_field :dni %>

      <div class="field">
        <%= form.label :gender, "Género:" %>
        <%= form.select :gender, ["Masculino", "Femenino", "No binario", "Otro"] %>
      </div>

       <div class="field">
        <%= form.label :birth_date, "Fecha de nacimiento:" %>
        <%= form.date_select :birth_date %>
      </div>

      <div class="field">
        <%= form.label :address, "Dirección:" %>
        <%= form.text_area :address %>
      </div>

      <div class="actions">
        <%= form.submit "Crear" %>
      </div>
    <% end %>
  </main>

  <footer>
    <!-- Aquí puedes agregar un pie de página si lo necesitas -->
  </footer>
</body>
</html>
