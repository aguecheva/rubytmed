<!DOCTYPE html>
<html>
<head>

</head>


<body>
  <header>
    <h1>Mis pacientes</h1>
  </header>
  <div class="interior">
    <a href="" class="logo"><img src="images/logo.png" alt=""></a>
    <nav class="navegation">
      <ul>
        <li><a href="/">Inicio</a></li>
        <li>
          <a href="Funciones">Funciones</a>
          <ul>
            <li><%= link_to 'Pacientes', patients_path %></li>
          </ul>
        </li>
        <li><a href="Contacto">Contacto</a></li>
        <li><a href="Base de datos">Base de datos</a></li>
        <li><a href="Log in">Log in</a></li>
        
      </ul>
    </nav>
  </div>
  <main>

    <%= form_with(url: "/patients", method: "get") do %>
      <%= label_tag(:q, "Buscar por nombre:") %>
      <%= text_field_tag(:q, params[:q]) %>
      <%= submit_tag("Buscar") %>
    <% end %>
    
    

    <table>
      <tr>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>DNI</th>
      </tr>
      <% @patients.each do |patient| %>
        <tr>
          <td><%= link_to patient.name, patient_path(patient) %></td>
          <td><%= patient.lastname %></td>
          <td><%= patient.dni %></td>
        </tr>
      <% end %>
    </table>

    <!-- Botón para crear un nuevo paciente -->
    <%= link_to 'Crear nuevo paciente', new_patient_path, class: 'new-patient' %>

  </main>

  <footer>
    <!-- Aquí puedes agregar un pie de página si lo necesitas -->
  </footer>
</body>
</html>
